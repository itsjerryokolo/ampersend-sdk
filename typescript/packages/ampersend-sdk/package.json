{
  "name": "@edgeandnode/ampersend-sdk",
  "description": "Tooling for building applications with x402 payment capabilities. Supports buyer and seller roles.",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ampersend-proxy": "./dist/mcp/proxy/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./x402": {
      "types": "./dist/x402/index.d.ts",
      "default": "./dist/x402/index.js"
    },
    "./mcp/client": {
      "types": "./dist/mcp/client/index.d.ts",
      "default": "./dist/mcp/client/index.js"
    },
    "./mcp/proxy": {
      "types": "./dist/mcp/proxy/index.d.ts",
      "default": "./dist/mcp/proxy/index.js"
    },
    "./smart-account": {
      "types": "./dist/smart-account/index.d.ts",
      "default": "./dist/smart-account/index.js"
    },
    "./mcp/server/fastmcp": {
      "types": "./dist/mcp/server/fastmcp/index.d.ts",
      "default": "./dist/mcp/server/fastmcp/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json --force",
    "clean": "rm -rf dist .tsbuildinfo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check --ignore-path ../../.prettierignore",
    "format:fix": "prettier . --write --list-different --ignore-path ../../.prettierignore",
    "test": "vitest run",
    "proxy:dev": "tsx watch src/mcp/proxy/cli.ts --env-prefix TS__MCP_PROXY__",
    "proxy:start": "node dist/mcp/proxy/cli.js --env-prefix TS__MCP_PROXY__"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "github:edgeandnode/mcp-typescript-sdk#2de06543904483073d8cc13db1d0e08e16601081",
    "@rhinestone/module-sdk": "^0.4.0",
    "@types/express": "^5.0.3",
    "async-mutex": "^0.5.0",
    "commander": "^12.1.0",
    "express": "^5.1.0",
    "viem": "^2.37.9",
    "x402": "^0.6.6",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "fastmcp": "^3.17.0"
  },
  "devDependencies": {
    "fastmcp": "github:edgeandnode/fastmcp#6446ea7b56eb291a6d4d7321e4a41ff0aacba1ef",
    "tsx": "^4.20.5"
  }
}
